# Airtable Configuration
# Get your Airtable API token from: https://airtable.com/account
AIRTABLE_TOKEN=your_airtable_token_here

# Airtable Base ID (found in the URL when viewing your base)
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Airtable Table ID (found in the URL when viewing your table)
AIRTABLE_TABLE_ID=your_airtable_table_id_here

# Airtable View ID (found in the URL when viewing a specific view)
AIRTABLE_VIEW_ID=your_airtable_view_id_here

# Shopify Configuration
# Get your Shopify Admin API access token from your Shopify app
SHOPIFY_ADMIN_TOKEN=your_shopify_admin_token_here

# Shopify shop domain (e.g., your-shop.myshopify.com)
SHOPIFY_SHOP_DOMAIN=your_shop_domain_here

# Shopify Collection ID (found in the URL when viewing a collection)
SHOPIFY_COLLECTION_ID=your_shopify_collection_id_here

# Update Configuration
# How often to update the collection (in hours)
UPDATE_FREQUENCY_HOURS=24

# Maximum number of records to fetch from Airtable (to control API usage)
MAX_AIRTABLE_RECORDS=500

# Force update flag (set to "true" to force an update regardless of schedule)
FORCE_UPDATE=false
